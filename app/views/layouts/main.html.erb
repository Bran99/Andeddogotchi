  $('.thegotchi').velocity({scaleX:(-1)},100);
  

})
$('.brain').on('mouseout', function(){
  $('.thegotchi').velocity({scaleX:(1)},100);

})

setInterval(function(){
  $('.thegotchi').velocity({marginLeft: '550px'},2000).velocity({marginLeft: '350px'},2000);
},5000)

</script>
