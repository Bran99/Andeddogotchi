// Wait for window load
$(window).load(function() {
  // Animate loader off screen
  $(".preloader").fadeOut("slow");;
});
/*<><><><><><><><>><><><><><><><><><><><><><><><><><><>*/
/*<><><><><><><><>><><><><><><><><><><><><><><><><><><>*/
/*<><><><><><><><><><>SUN + MOON<><><><><><><><><><><><>*/
